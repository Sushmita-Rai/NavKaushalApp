<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patriotic_gradient"
    tools:context=".TestsActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/testContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Test 1 Expandable -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Header -->
                    <TextView
                        android:id="@+id/test1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 1: Bow Holding Test"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/test1Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="8dp">

                        <!-- Rules -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scoring: Total time will be taken on completion of holding. Grading will be given 4-3-2-1 (Higher time of holding will be awarded highest grading)."
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/test1"
                            android:layout_marginBottom="12dp"
                            tools:ignore="ContentDescription" />

                        <!-- Table -->
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1,2,3,4"
                            android:background="#E0E0E0"
                            android:padding="4dp">

                            <!-- Header -->
                            <TableRow>
                                <TextView android:text="Points" android:padding="6dp" android:textStyle="bold" />
                                <TextView android:text="Recurve Boys" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                                <TextView android:text="Recurve Girls" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                                <TextView android:text="Compound Boys" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                                <TextView android:text="Compound Girls" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                            </TableRow>

                            <!-- Row 1 -->
                            <TableRow>
                                <TextView android:text="4" android:padding="6dp" />
                                <TextView android:text="60" android:padding="6dp" />
                                <TextView android:text="60" android:padding="6dp" />
                                <TextView android:text="60" android:padding="6dp" />
                                <TextView android:text="60" android:padding="6dp" />
                            </TableRow>

                            <!-- Row 2 -->
                            <TableRow>
                                <TextView android:text="3" android:padding="6dp" />
                                <TextView android:text="60-50" android:padding="6dp" />
                                <TextView android:text="60-50" android:padding="6dp" />
                                <TextView android:text="60-50" android:padding="6dp" />
                                <TextView android:text="60-50" android:padding="6dp" />
                            </TableRow>

                            <!-- Row 3 -->
                            <TableRow>
                                <TextView android:text="2" android:padding="6dp" />
                                <TextView android:text="50-40" android:padding="6dp" />
                                <TextView android:text="50-40" android:padding="6dp" />
                                <TextView android:text="50-40" android:padding="6dp" />
                                <TextView android:text="50-40" android:padding="6dp" />
                            </TableRow>

                            <!-- Row 4 -->
                            <TableRow>
                                <TextView android:text="1" android:padding="6dp" />
                                <TextView android:text="30" android:padding="6dp" />
                                <TextView android:text="30" android:padding="6dp" />
                                <TextView android:text="30" android:padding="6dp" />
                                <TextView android:text="30" android:padding="6dp" />
                            </TableRow>
                        </TableLayout>

                        <!-- Upload Button -->
                        <Button
                            android:id="@+id/test1UploadBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Video"
                            android:layout_marginTop="12dp" />

                        <!-- VideoView -->
                        <VideoView
                            android:id="@+id/test1VideoView"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            android:background="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Test 2 Expandable -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Header -->
                    <TextView
                        android:id="@+id/test2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 2: Draw Length Test"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Expandable Content -->
                    <LinearLayout
                        android:id="@+id/test2Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="8dp">

                        <!-- Rules -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scoring: The maximum draw length achieved will be measured and graded. Higher the draw length, better the score."
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <!-- Image -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/test2"
                            android:layout_marginBottom="12dp"
                            tools:ignore="ContentDescription" />

                        <!-- Table -->
                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1,2,3,4"
                            android:background="#E0E0E0"
                            android:padding="4dp">

                            <TableRow>
                                <TextView android:text="Points" android:padding="6dp" android:textStyle="bold" />
                                <TextView android:text="Recurve Boys" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                                <TextView android:text="Recurve Girls" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                                <TextView android:text="Compound Boys" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                                <TextView android:text="Compound Girls" android:padding="6dp" android:background="#FFCC00" android:textStyle="bold" />
                            </TableRow>

                            <!-- Example Rows -->
                            <TableRow>
                                <TextView android:text="4" android:padding="6dp" />
                                <TextView android:text="30+" android:padding="6dp" />
                                <TextView android:text="30+" android:padding="6dp" />
                                <TextView android:text="30+" android:padding="6dp" />
                                <TextView android:text="30+" android:padding="6dp" />
                            </TableRow>
                            <TableRow>
                                <TextView android:text="3" android:padding="6dp" />
                                <TextView android:text="29-28" android:padding="6dp" />
                                <TextView android:text="29-28" android:padding="6dp" />
                                <TextView android:text="29-28" android:padding="6dp" />
                                <TextView android:text="29-28" android:padding="6dp" />
                            </TableRow>
                        </TableLayout>

                        <!-- Upload Button -->
                        <Button
                            android:id="@+id/test2UploadBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Video"
                            android:layout_marginTop="12dp" />

                        <!-- VideoView -->
                        <VideoView
                            android:id="@+id/test2VideoView"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="12dp"
                            android:visibility="gone"
                            android:background="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Test 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- Test 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>

            <!-- Test 5 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test 5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:padding="16dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation (unchanged) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:orientation="horizontal">

            <!-- Profile -->
            <LinearLayout
                android:id="@+id/profileLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_profile"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#050505"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Tests -->
            <LinearLayout
                android:id="@+id/testsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/running"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tests"
                    android:textColor="#0B0B0B"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Events -->
            <LinearLayout
                android:id="@+id/eventsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/trophy"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textColor="#090909"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Rulebook -->
            <LinearLayout
                android:id="@+id/rulebookLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="4dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/document"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rulebook"
                    android:textColor="#0B0B0B"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
